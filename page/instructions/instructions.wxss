.instruct{
    width:100%;
    border-bottom:1rpx solid #cfcfcf;
    padding:0px 20rpx;  
    font-size:28rpx;  
    line-height: 80rpx;
    box-sizing: border-box;
}

.instruct .item{
    padding:0rpx 14rpx;
    border-bottom:1rpx solid #cfcfcf;
    display: flex;
    flex-direction: row;
}
.instruct navigator{
    width:100%;
    padding-left: 20rpx;
    display: flex;
    position: relative; 
    box-sizing: border-box; 
    height:80rpx;     
    overflow: hidden;
}

.instruct>view:last-child .item{
    border-bottom:none;
}

.instruct navigator{
    display: flex;
    width: 100%;
    flex-direction: row; 
}

.instruct text{
    display:flex;
    flex:1;
}

.instruct .icon_arr_r{
    flex-basis: auto;
    text-align: right;
    color:#d2d2d2;    
    position: absolute;
    right:0px;
    top:0px;  
}
