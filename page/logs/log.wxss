.section_form_1{
  margin:0px 10px 0px;
  border-radius: 5px;
  border:1px solid #e0e0e0;
  padding:0px 10px;
}

.section_form_1 label{
  display:flex;
  width:100%;
  height:44px;
  padding:0px 10px;
  box-sizing: border-box;
  border-bottom:1px solid #cfcfcf;
}

.section_form_1 .inp{
  flex: 1;
  line-height: 44px;
  height:44px;
  box-sizing: border-box;
}

.section_form_1 label .icon_yzm{
  flex:0 0 0 28px;
  display: block;
  width:18px;
  height:18px;
  box-sizing: border-box;
  margin-top:15px;
  margin-right:10px;
}
.section_form_1 label:last-child{
  border-bottom:0px;
}

.section_picker1{
  display:flex;
  margin:0px 10px 0px;
  border-radius: 5px;
  border:1px solid #e0e0e0;
  padding:0px 20px;  
}

.section_picker1 i{
  flex:0 0 0 28px;
  display: block;
  width:18px;
  height:18px;
  box-sizing: border-box;
  margin-top:15px;
  margin-right:10px;
}

.section_picker1 .picker1{
  flex: 1;
  line-height: 44px;
  height:44px;
  box-sizing: border-box;
}

.yzm{
  background-color:#f3f3f3;
  color:#6f6f6f;
  display: block;
  flex:0px 0 100px 0;
  width:100px;
  height: 24px;
  line-height: 24px;
  margin-top:9px;
  text-align: center;
  font-size:12px;
}

.describe{
  color: #a9a9a9;
  font-size:18px;
  text-align: center;
  line-height: 32px;
}
