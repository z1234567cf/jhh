/*司机列表*/


.driver_list{
  width:100%;
  margin-bottom: 24rpx;
  border-top:2rpx solid #cfcfcf;
  border-bottom: 1rpx solid #cfcfcf;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.driver_list view{
  display: flex;  
}

.driver_list_t{
  padding:0px 35rpx;
  display: flex;
}

.driver_list_t{
  flex-direction: row;
  border-bottom: 1rpx solid #d9d9d9;
  padding-bottom: 20rpx;
}

.driver_list_t .center{
  display: flex;  
  flex:1;
  height:84rpx;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;  
}

.driver_list_t .center .icon_arr{
  width: 42rpx;
  height:28rpx;  
}

.driver_list_tl{
  flex:1;  
  flex-direction: row;
  display: flex;
  line-height: 42rpx;
  text-align: left;
}

.driver_list_tl text{font-size: 38rpx; line-height:42rpx;}

.driver_list_tl .flex_row{
  display: flex;
  flex:0 0 0 150rpx;
}

.driver_list_tr{
  text-align: right;
  width:250rpx;
  flex: 0 0 0 250rpx;
  flex-direction: column;  
}

.icon_r_type_2{
  position:relative;
  width: 30rpx;
  height: 30rpx;
  left: 0px;
  top: 0px;
}

.driver_list_tr{
  font-size: 28rpx;
  line-height: 42rpx;
}

.driver_list_b{
  padding:10rpx 35rpx;
  display: flex;
}

.driver_list_bl{
  flex: 1;
  display: flex;
}

.driver_list_br{
  flex: 0 0 0 220rpx;
  display: flex;
  width: 220rpx;
  justify-content: center;
  align-items: right;  
  height:158rpx;
}

.driver_list_bl{
  display:flex;
  flex:1;
  line-height: 42rpx;
  padding:20rpx 0px;
}

.driver_list_bl_t text{font-size: 28rpx; margin-right: 10rpx;}
.driver_list_bl_b{
  display: flex;
  flex-direction: column;
}
.driver_list_bl_b text{color:#a09f9f;font-size:12px;}


